{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "commonjs",
    "target": "ES2022",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "build",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@src/*": ["src/*"],
      "@server/*": ["src/server/*"],
      "@config/*": ["src/server/config/*"],
      "@contexts/*": ["src/contexts/*"],
    },
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/**/*.test.ts"]
}
