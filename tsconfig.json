{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "commonjs",
    "target": "ES2022",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "build",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@src/*": ["src/*"],
      "@server/*": ["src/shared/infrastructure/server/*"],
      "@config/*": ["src/shared/infrastructure/server/config/*"],
      "@routes/*": ["src/shared/infrastructure/routes/*"],
      "@shared/*": ["src/shared/*"],
      "@assignment-module/*": ["src/assignment/*"],
      "@assignment-module-application/*": ["src/assignment/application/*"],
      "@assignment-module-core/*": ["src/assignment/core/*"],
      "@assignment-module-infrastructure/*": ["src/assignment/infrastructure/*"],
      "@location-module/*": ["src/location/*"],
      "@location-module-application/*": ["src/location/application/*"],
      "@location-module-core/*": ["src/location/core/*"],
      "@location-module-infrastructure/*": ["src/location/infrastructure/*"],
      "@contexts/*": ["src/contexts/*"],
    },
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/**/*.test.ts"]
}
